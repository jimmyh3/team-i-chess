<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<head>
    <style>

        h5 {
            text-align: center;
        }
        .col-4 {
            position: fixed;
            right: 0;
            bottom: 0;
        }

    </style>
</head>

<body>

<!-- display buttons, chessboard, chatroom in row & column -->
<!-- display body in container class-->

<div class="container-fluid">
    <div class="row">

        <!-- display "Join Game" buttons -->
        <div class="col-sm-2">
            <p>
                <button type="button" class="btn btn-primary">Join Game <span class="sr-only">(current)</span></button>
            </p>
            <p>
                <button type="button" class="btn btn-primary">Join Game <span class="sr-only">(current)</span></button>
            </p>
        </div>

        <!-- display Welcome messages, chessboard -->
        <div class="col-sm-6">
            <h5> Hello <strong>{{username}}!</strong></h5>
            <h5> Welcome to Chess Game!</h5>
        </div>

        <!-- display chat & messages box-->
        <div class="col-4">
            <div id="container-chat"> Chat Room
                <hr>
                <div class="chat">
                    <div class="row">
                        <div class="col-sm-1">
                            <div class="well">
                                <ul class="list-group" id="users"></ul>
                            </div>

                        </div>
                        <!-- display user input messages -->
                        <div class="chat-box">
                            <div class="chat" id="lobbyChat"></div>
                        </div>

                    </div>
                </div>
                <!--Type messages and send footer-->
                <form class="send-message" id="LobbyMessageForm" method="post" action="/message">
                    <div class="input-group">
                        <input type="text" class="form-control input-sm chat_input" id="lobbyMessage"
                               placeholder="enter message here..." name="message" autocomplete="off"/>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
            <!-- End of chat & messages box-->
        </div>
        <p hidden id="lobbyUser">{{username}}</p>
        <!-- End of chat-->

    </div>

    <!-- End of class ="row" -->
</div>
<!-- End of container class-->

<script src="/js/indexSocket.js"></script>

</body>
</html>
