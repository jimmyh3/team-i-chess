<!-- MAIN CONTENT -->
<div class="games-listing col">
    <div class="row">
        <div class="col col--margins">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a  class="nav-item nav-link active" 
                        id="nav-open-games-tab" 
                        data-toggle="tab" 
                        href="#nav-open-games" 
                        role="tab" 
                        aria-controls="nav-open-games" 
                        aria-selected="true"
                    >Open Games</a>
                    <a  class="nav-item nav-link" 
                        id="nav-rejoin-games-tab" 
                        data-toggle="tab" 
                        href="#nav-rejoin-games" 
                        role="tab" 
                        aria-controls="nav-rejoin-games" 
                        aria-selected="false"
                    >Rejoin Games</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" 
                     id="nav-open-games" 
                     role="tabpanel" 
                     aria-labelledby="nav-open-games-tab"
                >
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                {{#each rejoinableGames}}
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <p>Game #{{id}}</p>
                                        </div>
                                        <div class="card-body">

                                        </div>
                                        <div class="card-footer">
                                            <form method="get" action="/games/{{id}}">
                                                <div class="list">Game #{{id}}
                                                    <input type="submit" class="btn btn-info" value="Rejoin"/>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" 
                     id="nav-rejoin-games" 
                     role="tabpanel" 
                     aria-labelledby="nav-rejoin-games-tab"
                >
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                {{#each idleGames}}
                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <p>Game #{{id}}</p>
                                        </div>
                                        <div class="card-body">

                                        </div>
                                        <div class="card-footer">
                                            <form method="get" action="/games/{{id}}">
                                                <div class="list">Game #{{id}}
                                                    <input type="submit" class="btn btn-primary" value="Join"/>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="sidebar-sticky">
    <!-- CHAT BOX -->
    <div class="card chatbox">
        <div class="card-header">
            <p>Lobby Chat</p>
        </div>
        <div class="card-body" style="overflow-y: scroll">
            <!--<h5 class="card-title">Dark card title</h5>-->
            <p id="hiddenName" hidden>{{playerName}}</p>
            <p id="hiddenFaction" hidden>{{playerFaction}}</p>
            <div>
                <div id="chatDisplay">

                </div>
            </div>
        </div>
        <div class="card-footer">
            <form class="send-message" id="chatMessageForm" method="post" action="/message">
                <div class="input-group">
                    <label for="message"></label>
                    <input type="text" class="form-control" id="chatMessage"
                        placeholder="enter message here..." name="chatMessage" autocomplete="off">
                    <button type="submit" class="btn btn-primary" value="Send">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

