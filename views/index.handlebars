

<div class="container-fluid">
    <div class="row">
        <div class="sidebar-sticky col-12 col-sm-12 col-md-5 col-lg-4 col-xl-3 d-none d-md-block bg-light" style="padding-top: 64px;">

            <div class="card h-100">
                <div class="card-header">
                    <p>Header</p>
                </div>
                <div class="card-body" style="overflow-y: scroll">
                    <!--<h5 class="card-title">Dark card title</h5>-->
                    <p id="hiddenName" hidden>{{playerName}}</p>
                    <p id="hiddenFaction" hidden>{{playerFaction}}</p>
                    <div>
                        <div id="chatDisplay">

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form class="send-message" id="chatMessageForm" method="post" action="/message">
                        <div class="input-group">
                            <label for="message"></label>
                            <input type="text" class="form-control" id="chatMessage"
                                placeholder="enter message here..." name="chatMessage" autocomplete="off">
                            <button type="submit" class="btn btn-primary" value="Send">Send</button>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>
        
        <main role="main" class="col ml-sm-auto px-4" style="padding-top: 64px;">
            <div class="row">
                <h5> Hello <strong>{{username}}!</strong></h5>
            </div>

            <div class="row" style="min-width: 540px;"> 

                <div class="col-12 col-md-7">
                    <div class="card border-dark mx-auto text-center">
                        <div class="card-header">
                            <p>Games</p>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <h5 class="card-title">Dark card title</h5>
                                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    <div class="games-list">
                                        {{#each rejoin}}
                                            <form method="get" action="/games/{{id}}">
                                                <div class="list">Game #{{id}}
                                                    <input type="submit" class="btn btn-info" value="Rejoin"/>
                                                </div>
                                            </form>
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h5 class="card-title">Dark card title</h5>
                                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    <div class="games-list">
                                        {{#each game}}
                                            <form method="get" action="/games/{{id}}">
                                                <div class="list">Game #{{id}}
                                                    <input type="submit" class="btn btn-primary" value="Join"/>
                                                </div>
                                            </form>
                                        {{/each}}
                                        <div class="list" id="gamesList"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>

                
                <div class="col-12 col-md-5">
                    <div class="card border-dark mx-auto text-center">
                        <div class="card-header">Header</div>
                        <div class="card-body">
                            <h5 class="card-title">Dark card title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                </div>
                
            </div>

        </main>
        
    </div>
    
    

</div>

